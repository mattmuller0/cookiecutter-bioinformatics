/*
 * Nextflow Configuration for {{cookiecutter.project_name}}
 * SLURM cluster configuration template
 */

// Pipeline parameters
params {
    project_dir = "/path/to/your/project/{{cookiecutter.project_slug}}"
    conda_base = "/path/to/your/conda/installation"
    
    // Add your project-specific parameters here
    // Example:
    // run_analysis = true
}

// Process defaults
process {
    executor = 'slurm'
    queue = 'default_queue'          // Update with your SLURM queue name
    clusterOptions = '-A your_account'  // Update with your SLURM account
    time = '24h'
    memory = '16 GB'
    cpus = 4
    
    // Process-specific resources - customize for your pipeline
    // Example:
    // withName: 'process_name' {
    //     memory = '64 GB'
    //     cpus = 16
    // }
}

// Executor configuration
executor {
    name = 'slurm'
    queueSize = 10
    submitRateLimit = '10 sec'
}

// Conda configuration
conda {
    enabled = true
    useMamba = false
    createTimeout = '30 min'
}

// Reporting
report {
    enabled = true
    file = "${params.project_dir}/logs/nextflow_report.html"
    overwrite = true
}

timeline {
    enabled = true
    file = "${params.project_dir}/logs/nextflow_timeline.html"
    overwrite = true
}

trace {
    enabled = true
    file = "${params.project_dir}/logs/nextflow_trace.txt"
    overwrite = true
}

// Work directory
workDir = "${params.project_dir}/work"

// Resume by default
resume = true
